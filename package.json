{
  "name": "gatsby-netlify-ci",
  "version": "1.0.0",
  "private": true,
  "description": "gatsby-netlify-ci",
  "author": "Chad Sheets",
  "keywords": [
    "gatsby"
  ],
  "scripts": {
    "develop": "gatsby develop",
    "start": "gatsby develop",
    "build": "gatsby build",
    "lint": "eslint . --ext .js,.jsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "e2e": "run-p -r e2e:serve e2e:test",
    "e2e:test": "npx playwright test --config=e2e/playwright-test.config.js",
    "e2e:serve": "npx http-server public"
  },
  "dependencies": {
    "babel-plugin-styled-components": "^1.13.2",
    "gatsby": "^3.13.0",
    "gatsby-plugin-image": "^1.13.0",
    "gatsby-plugin-netlify-cms": "^5.13.0",
    "gatsby-plugin-prettier-eslint": "^1.0.6",
    "gatsby-plugin-sharp": "^3.13.0",
    "gatsby-plugin-styled-components": "^4.13.0",
    "gatsby-source-filesystem": "^3.13.0",
    "gatsby-transformer-remark": "^4.10.0",
    "gatsby-transformer-sharp": "^3.13.0",
    "netlify-cms-app": "^2.15.41",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "styled-components": "^5.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.14.1",
    "@types/jest": "^27.0.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "enzyme": "^3.11.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "http-server": "^13.0.2",
    "jest": "^27.1.1",
    "jest-junit": "^12.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "regenerator-runtime": "^0.13.9"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "es2021": true,
      "jest/globals": true
    },
    "extends": [
      "plugin:prettier/recommended",
      "plugin:react/recommended",
      "airbnb",
      "prettier"
    ],
    "ignorePatterns": [
      "node_modules",
      "public"
    ],
    "plugins": [
      "jest"
    ],
    "rules": {
      "react/jsx-props-no-spreading": "off",
      "react/prop-types": "off",
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
      ".cache",
      "coverage",
      "e2e",
      "node_modules",
      "public"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "setupFiles": [
      "<rootDir>/src/utilities/jest-enzyme-adapter.js"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js|jsx)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/public/",
      "/content/",
      "/.cache"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "outputDirectory": "coverage"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 140,
    "tabWidth": 2,
    "useTabs": false
  }
}
